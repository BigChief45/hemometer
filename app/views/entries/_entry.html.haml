.row
  .col-md-6
    %h3 Blood

    / Systolic Blood Pressure
    %label
      Systolic Blood Pressure
      %small (#{TEST_UNITS[:systolic_blood_pressure]})
    .progress
      .progress-bar{class: "#{progress_bar_color(Recommendations::SystolicPressure, entry.systolic_blood_pressure)}", 'aria-valuenow': entry.systolic_blood_pressure, 'aria-valuemin': '0', 'aria-valuemax': '100', style: "width: #{progress_bar_width(Recommendations::SystolicPressure, entry.systolic_blood_pressure)}%;" }
        = entry.systolic_blood_pressure

